<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#6366ff"
    tools:context="com.example.sash.tamilkalvi.LearnTamil">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/testbutton2"
        android:clickable="true"
        android:onClick="thirdTest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView22"
        android:src="@drawable/a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/testbutton2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="73dp"
        android:id="@+id/radioGroup2">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oo"
            android:id="@+id/radioButtonQ2A1"
            android:clickable="true"
            android:onClick="AnswerFalse"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/radioButton2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:clickable="true"
            android:onClick="AnswerTrue"
            android:id="@+id/radioButtonQ2A2"
            android:layout_below="@+id/radioButton"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="AnswerFalse"
            android:text="E"
            android:id="@+id/radioButton3"
            android:layout_below="@+id/radioButtonQ2A3"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="AnswerFalse"
            android:text="Oe"
            android:id="@+id/radioButtonQ2A4"
            android:layout_below="@+id/radioButton3"
            android:layout_alignStart="@+id/radioButton3" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pick the correct answer"
        android:id="@+id/textViewTest2"
        android:layout_above="@+id/radioGroup2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
