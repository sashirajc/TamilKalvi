<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#6366ff"
    tools:context="com.example.sash.tamilkalvi.LearnTamil">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/secondvowelbutton2"
        android:clickable="true"
        android:onClick="thirdvowel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/aa"
        android:layout_above="@+id/textViewSecondVowel1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aa"
        android:id="@+id/textViewSecondVowel1"
        android:textSize="30pt"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/secondvowelbutton2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pronounciation: &apos;a&apos; as in &apos;father&apos;"
        android:id="@+id/textViewSecondVowel2"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/secondvowelbutton2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
