<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#6366ff"
    tools:context="com.example.sash.tamilkalvi.LearnTamil">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/sixthvowelbutton2"
        android:clickable="true"
        android:onClick="seventhvowel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView6"
        android:src="@drawable/oo"
        android:layout_above="@+id/textViewSixthVowel1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OO"
        android:id="@+id/textViewSixthVowel1"
        android:textSize="30pt"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pronounciation: &apos;oo&apos; as in &apos;bloom&apos;"
        android:id="@+id/textViewSixthVowel2"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textViewSixthVowel1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
